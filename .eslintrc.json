{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:storybook/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "prettier",
    "import",
    "react-hooks",
    "jsx-a11y",
    "storybook"
  ],
  "rules": {
    "react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx", ".tsx", ".ts"] }],
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": ["error"],
    "import/extensions": [2, { "extensions": [".js", ".jsx", ".tsx", ".ts"] }],

    // import order rule from: https://vxlabs.com/2020/10/06/sort-typescript-import-groups-from-standard-to-local/
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", ["index", "sibling", "parent", "object"]],
        "pathGroupsExcludedImportTypes": ["builtin"],

        // Material UI and Chakra UI are just placeholders that could be functional when using one of them
        "pathGroups": [
          { "pattern": "@material-ui/**", "group": "external", "position": "after" },
          { "pattern": "@chakra-ui/**", "group": "external", "position": "after" },
          { "pattern": "@storybook/**", "group": "external", "position": "after" }
        ],
        "newlines-between": "always-and-inside-groups",
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ],

    // apparently this rule should be included in `eslint-config-airbnb`, but it's not working
    // so it's manually added
    "react/function-component-definition": [
      2,
      {
        "namedComponents": "arrow-function",
        "unnamedComponents": "arrow-function"
      }
    ],

    // note you must disable the base rule as it can report incorrect errors
    // for instance: https://stackoverflow.com/questions/63961803/eslint-says-all-enums-in-typescript-app-are-already-declared-in-the-upper-scope
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"]
  },
  "overrides": [
    {
      "files": [
        "**/*.stories.*",
        ".storybook/**",
        "src/**/*.test.@(js|jsx|ts|tsx)",
        "src/setupTests.ts"
      ],
      "rules": {
        "import/no-anonymous-default-export": "off",
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
